
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isOwnerOrAdmin() {
      let userRole = getUserRole(request.auth.uid);
      return userRole == 'admin' || userRole == 'owner';
    }

    // User Profiles:
    // - The owner can create their own 'owner' profile.
    // - Any user can read their own profile.
    // - Admins/Owners can read/write any profile.
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isOwnerOrAdmin());
      allow list: if isSignedIn() && isOwnerOrAdmin();
      allow create: if isSignedIn() && (isOwnerOrAdmin() || request.auth.token.email == 'rohitvetma101010@gmail.com');
      allow update: if isSignedIn() && isOwnerOrAdmin();
    }
    
    // Access Requests:
    // - Any signed-in user can create/read a request for themselves.
    // - Admins/Owners can read/update all requests.
    match /access_requests/{userId} {
      allow get, create: if isSignedIn() && isOwner(userId);
      allow list, update: if isSignedIn() && isOwnerOrAdmin();
    }
    
    // Allow admins/owners to read and write to all other collections for app functionality.
    // These are placeholders and should be refined for production.
    match /parties/{partyId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    match /itemGroups/{itemGroupId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    match /items/{itemId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    match /billingRecords/{billingRecordId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    // Audit Logs:
    // - Only Admins/Owners can read logs.
    // - (For now, let's assume writes happen from a trusted environment like a Cloud Function)
    match /logs/{logId} {
      allow read, write: if isSignedIn() && isOwnerOrAdmin();
    }

  }
}
