
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Check if the signed-in user's email is the designated owner's email.
    function isOwnerEmail() {
      return request.auth.token.email == 'rohitvetma101010@gmail.com';
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isOwnerOrAdmin() {
      // Short-circuit if it's the owner email, otherwise check role.
      if (isOwnerEmail()) {
        return true;
      }
      if (isSignedIn()) {
        let userRole = getUserRole(request.auth.uid);
        return userRole == 'admin' || userRole == 'owner';
      }
      return false;
    }

    // User Profiles:
    // - The owner can create their own 'owner' profile.
    // - Any user can read their own profile.
    // - Admins/Owners can read/write any profile.
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isOwnerOrAdmin());
      allow list: if isSignedIn() && isOwnerOrAdmin();
      // Allow owner email to create their initial record.
      allow create: if (isOwnerEmail() && request.resource.data.role == 'owner') || (isSignedIn() && isOwnerOrAdmin());
      allow update: if isSignedIn() && isOwnerOrAdmin();
    }
    
    // Access Requests:
    // - Any signed-in user can create/read a request for themselves.
    // - Admins/Owners can read/update all requests.
    match /access_requests/{requestId} {
      allow get: if isSignedIn() && (isOwner(requestId) || isOwnerOrAdmin());
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow list, update: if isSignedIn() && isOwnerOrAdmin();
    }
    
    // Data collections can be managed by authorized roles.
    match /parties/{partyId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    match /itemGroups/{itemGroupId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    match /items/{itemId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    match /billingRecords/{billingRecordId} {
       allow read, write: if isSignedIn() && (getUserRole(request.auth.uid) in ['editor', 'manager', 'admin', 'owner']);
       allow delete: if isSignedIn() && (getUserRole(request.auth.uid) in ['manager', 'admin', 'owner']);
    }

    // Audit Logs:
    // - Only Admins/Owners can read logs.
    // - (Writes should happen from a trusted server environment)
    match /logs/{logId} {
      allow read, write: if isSignedIn() && isOwnerOrAdmin();
    }

  }
}
