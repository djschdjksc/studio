
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the designated owner by email.
    function isOwner() {
      return request.auth != null && request.auth.token.email == "rohitvetma101010@gmail.com";
    }

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: Only the owner can manage their own profile.
    match /users/{userId} {
      allow read, write: if isOwner() && request.auth.uid == userId;
    }

    // Since we only have a single owner user now, any signed-in user can manage the data.
    // This is secure because only the owner can log in.
    match /parties/{partyId} {
       allow read, write: if isSignedIn();
    }

    match /itemGroups/{itemGroupId} {
       allow read, write: if isSignedIn();
    }

    match /items/{itemId} {
       allow read, write: if isSignedIn();
    }

    match /billingRecords/{billingRecordId} {
       allow read, write: if isSignedIn();
    }
    
    match /orders/{orderId} {
       allow read, write: if isSignedIn();
    }
    
    // Loading slips have been removed.
    match /loadingSlips/{loadingSlipId} {
       allow read, write: if false;
    }
    
    match /payments/{paymentId} {
      allow read, write: if isSignedIn();
    }

    match /productionLogs/{logId} {
      allow read, write: if isSignedIn();
    }

    // Audit Logs: Only the owner should be able to read or write logs.
    match /logs/{logId} {
      allow read, write: if isOwner();
    }
    
    // The access request system has been removed.
    match /access_requests/{requestId} {
      allow read, write: if false;
    }
  }
}
