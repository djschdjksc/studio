
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Since we only have a single owner user now, any signed-in user can manage the data.
    // This is secure because only the owner can log in.
    match /parties/{partyId} {
       allow read, write: if isSignedIn();
    }

    match /itemGroups/{itemGroupId} {
       allow read, write: if isSignedIn();
    }

    match /items/{itemId} {
       allow read, write: if isSignedIn();
    }

    match /billingRecords/{billingRecordId} {
       allow read, write: if isSignedIn();
    }
    
    match /orders/{orderId} {
       allow read, write: if isSignedIn();
    }
    
    match /productionLogs/{logId} {
      allow read, write: if isSignedIn();
    }

    // Default deny all other paths that are not explicitly defined.
    // This covers removed collections like 'users', 'access_requests', and 'logs'.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
