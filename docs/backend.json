
{
  "entities": {
    "Party": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Party",
      "type": "object",
      "description": "Represents a party involved in billing.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Party entity." },
        "name": { "type": "string", "description": "Name of the party." },
        "address": { "type": "string", "description": "Address of the party." },
        "phone": { "type": "string", "description": "Phone number of the party." }
      },
      "required": ["id", "name"]
    },
    "Item": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Item",
      "type": "object",
      "description": "Represents an item that can be billed.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Item entity." },
        "name": { "type": "string", "description": "Name of the item." },
        "group": { "type": "string", "description": "The item group name." },
        "unit": { "type": "string", "description": "Unit of measurement for the item." },
        "alias": { "type": "string", "description": "Alias code for the item." },
        "price": { "type": "number", "description": "Price of the item." }
      },
      "required": ["id", "name", "unit", "group"]
    },
    "ItemGroup": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ItemGroup",
      "type": "object",
      "description": "Represents a group of items.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the ItemGroup entity." },
        "name": { "type": "string", "description": "Name of the item group." }
      },
      "required": ["id", "name"]
    },
    "BillingRecord": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BillingRecord",
      "type": "object",
      "description": "Represents a billing record.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the BillingRecord entity." },
        "filters": {
          "type": "object",
          "properties": {
            "partyName": { "type": "string" }, "address": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "slipNo": { "type": "string" }, "vehicleNo": { "type": "string" },
            "vehicleType": { "type": "string" }, "billType": { "type": "string" },
            "notes": { "type": "string" }
          }
        },
        "billingItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "srNo": { "type": "number" }, "itemName": { "type": "string" },
              "quantity": { "type": "number" }, "unit": { "type": "string" },
              "uCap": { "type": "number" }, "lCap": { "type": "number" }
            }
          }
        },
        "manualPrices": { "type": "object", "additionalProperties": { "type": "number" } }
      },
      "required": ["id", "filters"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Stores user profile information and their role.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["viewer", "editor", "manager", "admin", "owner"] },
        "displayName": { "type": "string" }
      },
      "required": ["id", "email", "role"]
    },
    "AccessRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AccessRequest",
      "type": "object",
      "description": "Represents a user's request for a specific role.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "requestedRole": { "type": "string", "enum": ["viewer", "editor", "manager", "admin"] },
        "status": { "type": "string", "enum": ["pending", "approved", "denied"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "email", "requestedRole", "status", "createdAt"]
    },
    "AuditLog": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "AuditLog",
        "type": "object",
        "description": "Logs important actions performed by users.",
        "properties": {
            "id": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "userId": { "type": "string" },
            "userEmail": { "type": "string", "format": "email" },
            "action": { "type": "string" },
            "details": { "type": "object" }
        },
        "required": ["id", "timestamp", "userId", "userEmail", "action"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      { "path": "/parties/{partyId}", "definition": { "entityName": "Party", "schema": { "$ref": "#/backend/entities/Party" }, "description": "Stores party information." } },
      { "path": "/itemGroups/{itemGroupId}", "definition": { "entityName": "ItemGroup", "schema": { "$ref": "#/backend/entities/ItemGroup" }, "description": "Stores item group information." } },
      { "path": "/items/{itemId}", "definition": { "entityName": "Item", "schema": { "$ref": "#/backend/entities/Item" }, "description": "Stores items." } },
      { "path": "/billingRecords/{billingRecordId}", "definition": { "entityName": "BillingRecord", "schema": { "$ref": "#/backend/entities/BillingRecord" }, "description": "Stores billing records." } },
      { "path": "/users/{userId}", "definition": { "entityName": "UserProfile", "schema": { "$ref": "#/backend/entities/UserProfile" }, "description": "Stores user profiles." } },
      { "path": "/access_requests/{requestId}", "definition": { "entityName": "AccessRequest", "schema": { "$ref": "#/backend/entities/AccessRequest" }, "description": "Stores user access requests." } },
      { "path": "/logs/{logId}", "definition": { "entityName": "AuditLog", "schema": { "$ref": "#/backend/entities/AuditLog" }, "description": "Stores audit logs." } }
    ]
  }
}
